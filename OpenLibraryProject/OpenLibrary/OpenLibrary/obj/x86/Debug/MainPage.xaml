<Page
    x:Class="OpenLibrary.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OpenLibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
            <DataTemplate x:Key="OpenLibraryModelTemplate">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="title placeholder" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                </StackPanel>
            </DataTemplate>
        </Page.Resources>
        <Page.DataContext>
            <local:MainPageData/>
        </Page.DataContext>
        <Page.TopAppBar>
            <CommandBar>
                <CommandBar.SecondaryCommands>
                    <AppBarButton x:ConnectionId='1' x:Name="About" Label="About" />
                    <AppBarButton x:ConnectionId='2' x:Name="Exit" Label="Exit" />
                </CommandBar.SecondaryCommands>

                <AppBarButton x:ConnectionId='3' x:Name ="addButton" Icon="Add" Label="Add"/>
                <AppBarButton x:ConnectionId='4' x:Name="saveButton" Icon="Save" Label="Save" IsEnabled="false"/>
                <AppBarButton x:ConnectionId='5' x:Name="editButton" Icon="Edit" Label="Edit" IsEnabled="false"/>
                <AppBarSeparator d:LayoutOverrides="Width, Height"/>
                <AppBarButton x:ConnectionId='6' x:Name="deleteButton" Icon="Delete" Label="Delete" IsEnabled="false"/>

                <CommandBar.Content>
                    <TextBlock x:ConnectionId='7' Name="noteTitleTextBlock" Text="placeholder" Margin="15">
                    </TextBlock>
                </CommandBar.Content>
            </CommandBar>
        </Page.TopAppBar>

        <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320*"/>
                <ColumnDefinition Width="640*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="56"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBox x:ConnectionId='9' x:Name="textBox" TextWrapping="Wrap" Margin="10" PlaceholderText="Enter search term here..."/>

                <ListView x:ConnectionId='10' x:Name="listView" Grid.Row="1"/>

            </Grid>
            <Grid Grid.Column="1">
                <TextBox x:ConnectionId='8' x:Name="mainTextBox" TextWrapping="Wrap" Text="{Binding NoteBody, Mode=TwoWay}" IsReadOnly="true"/>
            </Grid>

        </Grid>
    </Page>

